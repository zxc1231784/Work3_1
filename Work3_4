import java.util.Scanner;

public class Work3_4 {

	public static void main(String[] args) {
		String st1, st2, st3;
		Scanner sc=new Scanner(System.in);
		System.out.println("請輸入字串:");
		st1=sc.next();
		System.out.println("請輸入字串:");
		st2=sc.next();
		System.out.println("請輸入字串:");
		st3=sc.next();
		
		System.out.println(st1+"的字數"+st1.length());
		System.out.println(st2+"的字數"+st2.length());
		System.out.println(st3+"的字數"+st3.length());
		

	}

}
